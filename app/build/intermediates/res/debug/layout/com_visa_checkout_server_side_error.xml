<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/com_visa_checkout_ten_px">

    <ImageView
        android:id="@+id/com_visa_checkout_ivErrorIcon"
        android:layout_marginLeft="@dimen/com_visa_checkout_layout_margin_left_right"
        android:layout_width="@dimen/com_visa_checkout_forty_px"
        android:layout_height="@dimen/com_visa_checkout_forty_px"
        android:src="@drawable/com_visa_checkout_error_icon"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/com_visa_checkout_tvServerSideError_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/com_visa_checkout_layout_margin_left_right"
        android:textColor="@color/com_visa_checkout_server_side_error_color"
        android:layout_toRightOf="@id/com_visa_checkout_ivErrorIcon"
        android:layout_marginLeft="@dimen/com_visa_checkout_twenty_px"
        android:layout_alignTop="@+id/com_visa_checkout_ivErrorIcon"
        android:visibility="gone"
        android:textSize="@dimen/com_visa_checkout_pl_twelve_px_sp"
        android:layout_centerVertical="true"
        android:text="This is a server side error" />

</RelativeLayout>
