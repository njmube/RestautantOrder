<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.haoweiw.restaurant.MainActivity">

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/restaurantmenu"
        android:scaleType="centerCrop"     />

    <TextView
        android:id="@+id/tableNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:fontFamily="fantasy"
        android:layout_alignBottom="@id/menuImage"
        android:layout_marginRight="20dp"  />


    <Button
        android:id="@+id/startOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Order"
        android:textSize="25sp"
        android:layout_below="@id/menuImage"
        android:onClick="goToMenu" />

    <Button
        android:id="@+id/pickUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Up"
        android:textSize="25sp"
        android:layout_below="@+id/startOrder"
        android:onClick="goToMenu_Pickup"/>




</RelativeLayout><!-- From: file:/Users/haoweiw/AndroidStudioProjects/RestaurantOrder-Visa2-4/app/src/main/res/layout/restaurant_activity_main.xml -->